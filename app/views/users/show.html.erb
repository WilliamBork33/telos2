<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
</div>
<div>

<table class="table is-bordered is-striped is-narrow">
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th>Author</th>
    <th>Seller ID</th>
    <th>Book ID</th>
    <th>Price</th>
    <th>Date of Listing</th>
    <th>Delete from Market</th>
  </tr>
<% @user.books.each do |book| %> 
  <tr>
    <td><%= book.title %>
    <td><%= book.description %></td>
    <td><%= book.author %></td>
    <td><%= book.user.name %></td>
    <td><%= book.id %></td>
    <td><%= book.price %></td>
    <td><%= book.created_at.strftime("%b. %d %Y") %></td>
    <td><%= link_to "Remove", book, method: :delete, data: { confirm: "Remove From Market?" } %></td>
  </tr>
<% end %>
</table>
</div>

